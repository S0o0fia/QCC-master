                                        <td>
                                            @Html.DisplayFor(modelItem => item.ConcreteRank)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.CementWeight)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.WaterWeight)
